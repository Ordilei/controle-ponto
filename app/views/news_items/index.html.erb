<div class="page_header"><%=_ 'Admin / News' %>
  <%= link_to "[New]", new_news_item_path %>
</div>

<% for news in @news %>
  <div class="news_item well"
    <%= news.created_at.strftime("%H:%M %d/%m-%y") %><br/><%= news.body %><br/>
    <%= link_to "Edit", edit_news_item_path(news) %> | 
    <%= link_to "Delete", news_item_path(news), :method => "delete" %>
  </div>
<% end %>
  
